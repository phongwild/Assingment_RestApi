<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="275dp"
    android:background="#fff"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/item_rcv_product">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/item_lv_img_product"
                    android:layout_width="160dp"
                    android:layout_height="100dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/item_lv_tvName_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fresh Orange"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/item_lv_tvDes_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500gram"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:textColor="#bbbbbb"/>
        <TextView
            android:id="@+id/item_lv_tvPrice_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14.5"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#000"/>
        <Button
            android:id="@+id/item_lv_btnAdd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add to Cart"
            app:backgroundTint="#ecf1f7"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="15sp"
            android:background="@drawable/style_input"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>